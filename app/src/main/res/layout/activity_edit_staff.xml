<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".EditStaff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editStaffCenterLine"
        android:layout_centerInParent="true">

    </RelativeLayout>

    <TextView
        android:text="Edit Staff Info"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_above="@id/editStaffCenterLine"
        android:layout_marginBottom="220dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/editStaffCenterLine"
        android:layout_marginBottom="105dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Username: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/staffCurrentUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the value"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="0.75"/>

    </LinearLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editStaffCenterLine"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        app:startIconDrawable="@drawable/ic_baseline_account_circle_24"
        app:startIconTint="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/editStaffName"
            android:hint="Enter Username"
            android:textColorHint="@color/black">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/editStaffCenterLine"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Role: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/staffCurrentRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the value"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="0.75"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editStaffCenterLine"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        app:startIconDrawable="@drawable/ic_baseline_flag_circle_24"
        app:startIconTint="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/editStaffRole"
            android:hint="Enter Role"
            android:textColorHint="@color/black">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/editStaffCenterLine"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Password: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/staffCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the value"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="0.75"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editStaffCenterLine"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="135dp"
        app:startIconDrawable="@drawable/ic_baseline_security_24"
        app:startIconTint="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/editStaffPassword"
            android:hint="Enter Password"
            android:textColorHint="@color/black">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateStaff"
        android:text="Edit"
        android:layout_below="@id/editStaffCenterLine"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="220dp"/>




</RelativeLayout>